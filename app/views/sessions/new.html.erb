<% provide(:title, 'Login') %>
<h2 class="center-align">Login</h2>

<%= form_for(:session, url: login_path) do |f| %>

<div class="valign-wrapper row">
  <div class="col s8 pull-s2 card hoverable z-depth-1 grey lighten-3">
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
   </div>
   <div class="row">
     <div class="input-field col s12">
       <%= f.label :password %>
       <%= f.password_field :password, class: 'form-control' %>
     </div>
       <%= f.check_box :remember_id, id:'remember_id' %>
       <%= f.label 'remember_me_on_this_device', for: 'remember_id',
           id:'remember_me brown darken-3' %>
   </div>

   <div class="row">
     <%= f.submit "Login", class: "col s12 btn waves-effect brown darken-3" %>
   </div>
  <% end %>
  <p><%= link_to "Forgot Your Password?", new_password_reset_path,
      class: "brown-text" %></p>
  <p>New user? <%= link_to "Please, sign up!", signup_path,
                   class: "brown-text" %></p>
 </div>
</div>
