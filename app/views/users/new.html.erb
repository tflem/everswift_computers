<% provide(:title, 'Sign Up') %>
<h2 class="center-align">Sign Up</h2>

<div class="valign-wrapper row sign-up-form">
  <div class="col card hoverable z-depth-1 grey lighten-4 row; s10 pull-s1 pull-m3 l4 pull-l4">
    <form>
      <div class="form-content">
        <div class="row">
          <div class="input-field col s12">
            <%= form_for(@user) do |f| %>
              <%= f.label :name %>
              <%= f.text_field :name %>
          </div>
       </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password %>
          <%= f.password_field :password %>
       </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password_confirmation, "Password Confirmation" %>
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      <div class="row">
          <%= f.submit "Create account", class: "col s12 btn waves-effect brown darken-3" %>
      </div>
      <% end %>
    </div>
  </form>
 </div>
</div>
